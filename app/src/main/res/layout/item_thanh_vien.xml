<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:minHeight="80sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#D5F3EE"
    android:layout_marginLeft="17dp"
    android:layout_marginRight="17dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/tv_ma_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mã tv"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/tv_delete_Thanh_vien"
            android:fontFamily="@font/philosopherregular"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_tenTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ten"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/tv_delete_Thanh_vien"
            android:fontFamily="@font/philosopherregular"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_ma_TV"/>
        <TextView
            android:id="@+id/tv_nam_sinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="năm sinh"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/tv_delete_Thanh_vien"
            android:fontFamily="@font/philosopherregular"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_tenTV"
            />

        <TextView
            android:id="@+id/tv_delete_Thanh_vien"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:text="X"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#187C6F"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>