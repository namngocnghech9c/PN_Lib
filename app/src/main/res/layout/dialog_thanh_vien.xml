<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/txt_title_dialog_Thanh_vien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Thành Viên"
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/philosopherbold"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tied_add_tenTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên thành viên" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tied_add_namSinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Năm sinh" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_cancel_add_thanhVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blueGreen"
            android:text="Hủy"/>
        <Button
            android:id="@+id/btn_add_thanhVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:backgroundTint="@color/blueGreen"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>
</LinearLayout>